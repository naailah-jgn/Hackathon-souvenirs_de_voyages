{% extends 'base.html.twig' %}
{% block navbar %}
	<header></header>
{% endblock %}

{% block title %}Desire match
{% endblock %}

{% block body %}
	<h1 class="text-center mt-5">Correspondance trouv√©</h1>
	<div class=" row justify-content-around mb-5">
		<div class="card col-4">
			<div class="card-body">
				<h4 class="card-title">Envie match</h4>
				<h6 class="card-subtitle mb-2 text-muted">{{desire.name}}</h6>
				<h6 class="card-subtitle mb-2 text-muted">Budget:
					{{desire.budget}}</h6>
			</div>
		</div>
		<div class="col-4">
			{% for trip in trips %}
				<div class="card ">
					<div class="card-body">
						<h4 class="card-title">Voyage match</h4>
						<h6 class="card-subtitle mb-2 text-muted">{{trip.countryName}}</h6>
						<h6 class="card-subtitle mb-2 text-muted">{{trip.description}}</h6>
						<a href="" class="card-link">Voir la fiche</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
