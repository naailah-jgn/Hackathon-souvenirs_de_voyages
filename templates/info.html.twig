{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
	<h1 class="text-center mt-5">Informations</h1>
	<div class="row justify-content-around mb-5">
		<div class="card mb-3 info-voyage col-4">
			<h3 class="card-header text-center">Voyageur</h3>
			<div class="card-body">
				<h5 class="card-title">Qu'est-ce qu'un voyageur ?</h5>
			</div>
			<a href="">
				<img src="{{ asset('build/images/voyageur.png') }}" class="d-block user-select-none" width="100%" height="100%">
				<rect width="100%" height="100%" fill="#868e96"></rect>
			</a>
		</img>
		<div class="card-body">
			<p class="card-text">Dans le cadre d'une vente, le voyageur vous permettra d'acquérir des produits ou objets locaux du pays d'où il se trouve.</p>
		</div>
	</div>

	<div class="card mb-3 info-envie col-4">
		<h3 class="card-header text-center">Acheteur</h3>
		<div class="card-body">
			<h5 class="card-title">Qu'est-ce qu'un acheteur ?</h5>
		</div>
		<a href="">
			<img src="{{ asset('build/images/acheteur.png') }}" class="d-block user-select-none" width="100%" height="100%">
			<rect width="100%" height="100%" fill="#868e96"></rect>
		</a>
	</img>
	<div class="card-body">
		<p class="card-text">Vous pourrez acquérir des produits ou objets locaux.</p>
	</div>
</div></div>{% endblock %}
